    </NavigationPage>
    
    <NavigationPage Title="View A" Icon="lista.png">
        <x:Arguments>
            <local:ViewA />
        </x:Arguments>
    </NavigationPage>
    
    <NavigationPage Title="Todas" IconImageSource="hogar.png">
